= form_for @order, html: { class: "form form-horizontal order" } do |f|
  .form-group
    = f.label :name, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :name, class: 'form-control', required: true
    = f.error_span(:name)
  .form-group
    = f.label :address, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_area :address, class: 'form-control', required: true
    = f.error_span(:address)
  .form-group
    = f.label :email, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :email, class: 'form-control', required: true
    = f.error_span(:email)
  .form-group
    = f.label :pay_type, class: 'control-label col-lg-2'
    .col-lg-10
      = f.select :pay_type, Order::PAYMENT_TYPES ,prompt: 'Select a payment method', class: "form-control", id:"custom", required: true


    = f.error_span(:pay_type)
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), orders_path, :class => 'btn btn-default'
